{
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true,
    "mocha": true,
    "phantomjs": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": "airbnb-base",
  "rules": {
    "no-unused-vars": 1,
    "no-redeclare": 1,
    "no-mixed-operators": 2,
    "linebreak-style": 2,
    "no-param-reassign": 2,
    "prefer-template": 2,
    "class-methods-use-this": 1,
    "import/prefer-default-export": 0,
    "prefer-const": 1
  }
}